FoamFile
{
    format          ascii;
    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         backward;
    //default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
}

divSchemes
{
    default                         none;
    div(phi, U)                     Gauss linear;
    div(nuEff*dev2(T(grad(U))))     Gauss linear;
}

laplacianSchemes
{
    default         none;
    div(phi, U)     Gauss linear orthogonal;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default     orthogonal;
    //default     limited 1;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //